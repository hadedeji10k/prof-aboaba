<%- include ('../views/_layouts/adminheader') %> 

<h1 class="page-title">Edit About Me</h1>
<a href="/admin/about" class="btn btn-primary">Back to all About Me</a>
<br> <br>

<form action="/admin/about/edit-about/<%= id %>" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title" required>

        <br>
        <label for="">Description</label>
        <textarea name="desc" class="form-control" cols="30" rows="10" required placeholder="Description"><%= desc %></textarea>
        <br>
    </div>

    
    <button type="submit" class="btn btn-dark">Submit</button>
</form>

