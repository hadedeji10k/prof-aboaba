<%- include ('../views/_layouts/adminheader') %> 

<h1 class="page-title">Add a Journal</h1>
<a href="/admin/journals" class="btn btn-primary">Back to all Journals</a>
<br> <br>

<form action="/admin/journals/add-journal" method="post" enctype="multipart/form-data">
    <div class="form-group">

        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
        
        <br>
        <label for="">Description</label>
        <textarea name="desc" class="form-control" cols="30" rows="10" placeholder="Description"><%= desc %></textarea>
        
        <br>
        
        <label for="">Journal Preview</label>
        <input type="file" class="form-control" name="image" id="img" required>
        <img src="#" id="imgPreview">
        <br>

        <label for="">Journal to be uploaded</label>
        <input type="file" class="form-control" name="journal" required>

    </div>

        <button type="submit" class="btn btn-dark">Submit</button>
</form>



<script>
    
    function readURL(input) {
        if (input.files && input.files[0]){
            var reader = new FileReader();

            reader.onload = function(e){
                $("#imgPreview").attr("src", e.target.result).width(100).height(100);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#img").change(function(){
        readURL(this);
    });

</script>

